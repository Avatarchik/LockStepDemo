<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/ourpalm_quicklogin_loading_bg" />

            <corners android:radius="7dp" />
        </shape>

        <padding
            android:bottom="5dp"
            android:left="2dp"
            android:right="2dp"
            android:top="5dp" />
    </item>
    <item
        android:bottom="2px"
        android:right="1px">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="0"
                android:endColor="@color/ourpalm_quicklogin_loading_bg_gradient"
                android:startColor="@color/ourpalm_quicklogin_loading_bg_gradient" />

            <corners android:radius="5dp" />

            <padding
                android:bottom="5dp"
                android:left="2dp"
                android:right="2dp"
                android:top="5dp" />

            <stroke
                android:width="1px"
                android:color="@color/ourpalm_quicklogin_loading_bg" />
        </shape>
    </item>

</layer-list>