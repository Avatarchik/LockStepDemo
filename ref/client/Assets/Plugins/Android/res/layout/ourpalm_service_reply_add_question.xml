<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:background="@drawable/ourpalm_service_reply_submit_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/ourpalm_service_reply_title"
            android:layout_width="match_parent"
            android:layout_height="45dp" >

            <TextView
                android:id="@+id/ourpalm_service_add_question_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="14dp"
                android:text="@string/ourpalm_service_add_question"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ourpalm_service_add_question_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="11dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ourpalm_fb_closed" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="@color/ourpalm_service_evaluate_line_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:text="@string/ourpalm_service_add_describe"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ourpalm_service_question_input_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/ourpalm_service_add_question_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:background="@android:color/transparent"
                android:singleLine="false"
                android:textColorHint="@color/ourpalm_service_question_input_hint"
                android:textSize="14sp" >

                <requestFocus />
            </EditText>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:text="@string/ourpalm_service_add_screenshot"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/ourpalm_add_question_up_screenshot_btn"
            android:layout_width="109dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ourpalm_fb_upload_btn"
            android:text="@string/ourpalm_service_question_upimage"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ourpalm_add_question_up_screenshot_layout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <LinearLayout
                android:id="@+id/ourpalm_reply_upimage_layout1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="14dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/ourpalm_reply_image1_icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/ourpalm_reply_del_image1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:src="@drawable/ourpalm_fb_delete" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ourpalm_reply_upimage_layout2"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/ourpalm_reply_image2_icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/ourpalm_reply_del_image2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:src="@drawable/ourpalm_fb_delete" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/ourpalm_add_question_submit_btn"
            android:layout_width="148dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="28dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ourpalm_fb_submit_btn"
            android:drawableLeft="@drawable/ourpalm_fb_submit_icon"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="@string/ourpalm_service_add_submit"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>

</ScrollView>