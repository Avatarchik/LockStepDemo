<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ourpalm_ranklist_layout"
    android:layout_width="280dp"
    android:layout_height="266dp"
    android:layout_gravity="center"
    android:background="@drawable/ourpalm_dialog_bg"
    android:gravity="center_horizontal"   
    android:orientation="vertical" >

    

      <TextView
            android:id="@+id/ourpalm_login_title_textview"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/ourpalm_login_title_bg_press" 
            android:text="@string/ourpalm_rankList_title"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="22sp" />
        
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="172dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        
        >
        
        <WebView
            android:id="@+id/ourpalm_ranklist_webview"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="53dp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        
        
        <Button
            android:id="@+id/ourpalm_ranklist_btn"
            android:layout_width="178dp"
            android:layout_height="40dp"
            android:background="@drawable/ourpalm_button_green_background"
            android:text="@string/ourpalm_rankList_button"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>