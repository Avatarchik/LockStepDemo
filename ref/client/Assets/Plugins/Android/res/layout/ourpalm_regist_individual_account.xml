<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="190dp"
    android:layout_gravity="center"
    android:background="@drawable/ourpalm_dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ourpalm_login_title"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/ourpalm_login_title_bg_press" >

        <TextView
            android:id="@+id/ourpalm_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/ourpalm_dialog_regist_title_1"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@+id/ourpalm_title_textView"
            android:layout_alignTop="@+id/ourpalm_title_textView"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/ourpalm_title_textView"
            android:background="@color/ourpalm_color_white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/ourpalm_regist_individual_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/ourpalm_regist_individual_msg"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/ourpalm_color_black" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/ourpalm_regist_individual_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/ourpalm_button_green_background"
            android:text="@string/ourpalm_dialog_regist_button_1"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ourpalm_regist_individual_skip_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/ourpalm_button_black_background"
            android:text="@string/ourpalm_dialog_regist_later"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>